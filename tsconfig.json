{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@c/*": ["src/components/*"],
      "@cc/*": ["src/components/common/*"],
      "@icon/*": ["src/assets/icon/*"],
      "@img/*": ["src/assets/img/*"],
      "@theme/*": ["src/assets/theme/*"],
      "@style/*": ["src/assets/style/*"],
      "@libs/*": ["src/libs/*"],
      "@config/*": ["src/config/*"],
      "@p_m/*": ["src/pages/modules/*"],
      "@p/*": ["src/pages/*"],
      "@api/*": ["src/api/*"],
      "@mixin/*": ["src/mixins/*"],
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
